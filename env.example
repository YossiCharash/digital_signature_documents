# Application
APP_NAME=Invoice Digitalization Platform
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# Server
HOST=0.0.0.0
PORT=8000

# Security
TLS_ENABLED=true
TLS_CERT_PATH=/path/to/cert.pem
TLS_KEY_PATH=/path/to/key.pem

# Digital Signature
SIGNING_CERT_PATH=/path/to/signing_cert.pem
SIGNING_KEY_PATH=/path/to/signing_key.pem
SIGNING_KEY_PASSWORD=
SIGNING_ALGORITHM=SHA256

# Email Service
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_USE_TLS=true
SMTP_FROM_EMAIL=noreply@example.com
SMTP_FROM_NAME=Invoice Digitalization

# Email API (alternative)
EMAIL_API_URL=
EMAIL_API_KEY=

# SMS Service
SMS_PROVIDER=api
SMS_API_URL=https://api.sms-provider.com/v1/send
SMS_API_KEY=
SMS_SENDER_NAME=InvoiceSystem

# OCR
OCR_ENABLED=true
TESSERACT_CMD=/usr/bin/tesseract

# Storage
UPLOAD_DIR=./uploads
TEMP_DIR=./temp
INVOICE_STORAGE_DIR=./invoices

# Archival
ARCHIVAL_ENABLED=true
ARCHIVAL_RETENTION_YEARS=7
