# Application
APP_NAME=Document Delivery
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# Server
HOST=0.0.0.0
PORT=8000

# Email (smtp or api)
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_USE_TLS=true
SMTP_FROM_EMAIL=noreply@example.com
SMTP_FROM_NAME=Document Delivery

# Email API (when EMAIL_PROVIDER=api)
EMAIL_API_URL=
EMAIL_API_KEY=

# SMS (required for send-sms)
SMS_PROVIDER=api
SMS_API_URL=https://api.sms-provider.com/v1/send
SMS_API_KEY=
SMS_SENDER_NAME=DocDelivery

# S3 (required for send-sms â€“ download link)
S3_ENABLED=true
S3_BUCKET_NAME=my-bucket
S3_REGION=us-east-1
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_ENDPOINT_URL=
S3_PRESIGNED_URL_EXPIRATION=3600
# Cleanup job: delete documents older than this many days (runs daily at 00:00 Israel time)
S3_CLEANUP_RETENTION_DAYS=7

# Signing (required for /documents/sign-and-email, /documents/sign-and-sms)
# Generate keys first: py scripts/generate_keys.py
# Option 1: Path to PEM file (recommended)
PRIVATE_KEY_PATH=./certificates/signing_key.pem
# Option 2: Direct PEM string (use \n for newlines)
# PRIVATE_KEY_PEM=-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----

# TSA (Trusted Timestamping Authority) - optional but recommended
# Provides trusted timestamping to verify when document was signed
# Free TSA services (no authentication required):
#   http://timestamp.digicert.com
#   http://timestamp.sectigo.com
#   http://timestamp.globalsign.com/tsa/r6advanced1
# TSA_URL=http://timestamp.digicert.com
# TSA_USERNAME=  # Optional: only if TSA requires authentication
# TSA_PASSWORD=  # Optional: only if TSA requires authentication
# TSA_ADD_DOCTIMESTAMP=true  # Add RFC3161 DocTimeStamp (recommended)

# Visual signature stamp (optional)
# Path to signature stamp image (PNG recommended)
SIGNATURE_IMAGE_PATH=assets/signature_stamp.png
# Position in points (72 points = 1 inch, origin is bottom-left of page)
SIGNATURE_POSITION_X=50.0
SIGNATURE_POSITION_Y=50.0
# Size in points (optional, defaults to image size scaled to 72 DPI)
# SIGNATURE_WIDTH=100.0
# SIGNATURE_HEIGHT=100.0
# Page number (0-indexed, -1 for all pages)
SIGNATURE_PAGE=0
